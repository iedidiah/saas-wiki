<h1>Edit Your Wiki</h1>
<div class="row">
  <div class="col-md-8">
  <%= form_for @wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title%>
    </div>
    
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, cols: 42 %>
    </div>
    <% if current_user.paid %>    
      <div class="form-group">
        <%= f.label :public %>
        <%= f.check_box :public %>
      </div>
    <% end %>
    <div class="form-group">
      <%=f.submit "Update Wiki", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
  <div class="col-md-4">
    <h3>Add collaborators to this Wiki</h3>
  </div>
</div>
