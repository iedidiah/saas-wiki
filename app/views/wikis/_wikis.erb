    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= wikis.title %>
        </h3>
      </div>
      <div class="panel-body">
        <%= wikis.body %>
      </div>
      <div class="panel-footer">
        <%= wikis.short_description %>
        <% if wikis.editable_by?(current_user) %>
          <%= link_to "Edit", edit_wiki_path(wikis), class: 'btn btn-success' %> 
          <% if wikis.deletable_by?(current_user) %>
            <%= link_to "Delete Wiki", wikis, method: :delete, class: 'btn btn-danger pull-right', data: { confirm: 'Do you want to delete this Wiki?' } %>
          <% end %>
        <% end %>
      </div>
    </div>
